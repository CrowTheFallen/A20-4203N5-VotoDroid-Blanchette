<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/LaQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:paddingBottom="30dp"
        android:singleLine="true"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/BoutonVersStats"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:layout_alignTop="@+id/LaQuestion"
        android:layout_alignBottom="@+id/LaQuestion"
        android:layout_alignRight="@+id/LaQuestion"
        android:src="@drawable/ic_action_vote2"
        android:background="#B8B4B4"
        />



</LinearLayout>